<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nyu.cs9033.eta.controllers.ViewTripActivity"
    android:id="@+id/viewLayout"
    android:background="#2196F3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Name"
        android:id="@+id/view_trip_name"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_name_text"
        android:layout_alignTop="@+id/view_trip_name"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/view_name_text"
        android:background="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Location"
        android:id="@+id/view_trip_location"
        android:layout_below="@+id/view_trip_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_location_text"
        android:background="#2196F3"
        android:layout_alignTop="@+id/view_trip_location"
        android:layout_alignLeft="@+id/view_name_text"
        android:layout_alignStart="@+id/view_name_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Date"
        android:id="@+id/viewtrip_date"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/view_trip_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_date_text"
        android:background="#2196F3"
        android:layout_alignTop="@+id/viewtrip_date"
        android:layout_alignLeft="@+id/view_location_text"
        android:layout_alignStart="@+id/view_location_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Time"
        android:id="@+id/view_trip_time"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/viewtrip_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_time_text"
        android:background="#2196F3"
        android:layout_alignTop="@+id/view_trip_time"
        android:layout_alignLeft="@+id/view_date_text"
        android:layout_alignStart="@+id/view_date_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport Mode"
        android:id="@+id/view_trip_transport"
        android:layout_below="@+id/view_trip_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_transport_text"
        android:background="#2196F3"
        android:layout_alignTop="@+id/view_trip_transport"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/view_trip_transport"
        android:layout_alignLeft="@+id/view_time_text"
        android:layout_alignStart="@+id/view_time_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/view_trip_friends"
        android:layout_below="@+id/view_trip_transport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_friends_text"
        android:background="#2196F3"
        android:layout_alignTop="@+id/view_trip_friends"
        android:layout_toRightOf="@+id/view_trip_transport"
        android:layout_toEndOf="@+id/view_trip_transport" />

</RelativeLayout>